{
  "version": 2,
  "name": "epos-app",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "backend/api-gateway/main.py",
      "use": "@vercel/python"
    },
    {
      "src": "backend/services/colony-maintenance/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/backend/api-gateway/main.py"
    },
    {
      "src": "/api/colony/(.*)",
      "dest": "/backend/services/colony-maintenance/main.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/api-gateway/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
